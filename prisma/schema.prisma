// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// AUTHOR
model Author {
  id    String  @id @default(uuid())
  name  String
  books Books[]

  @@map("authors")
}

// BOOKS
model Books {
  id        String @id @default(uuid())
  name      String
  author_id String
  author    Author @relation(fields: [author_id], references: [id])

  @@map("books")
}
