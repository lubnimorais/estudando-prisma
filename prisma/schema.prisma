// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// COURSES
model Courses {
  id             String           @id @default(uuid())
  name           String
  description    String
  duration       Int
  CoursesModules CoursesModules[]

  @@map("coursers")
}

// MODULES
model Modules {
  id             String           @id @default(uuid())
  name           String
  description    String
  CoursesModules CoursesModules[]

  @@map("modules")
}

// MANY TO MANY
model CoursesModules {
  id         String   @id @default(uuid())
  courses_id String
  modules_id String
  created_at DateTime @default(now())
  course     Courses  @relation(fields: [courses_id], references: [id])
  module     Modules  @relation(fields: [modules_id], references: [id])

  @@map("courses_modules")
}
